node {
    
    def maven = tool name: "maven3.9"
     //checkout stage
    stage ('checkout'){
       git branch:'master', url: 'https://github.com/neetur427/nexustest.git'
    }
    //build stage
    stage ('building'){
        sh "$maven/bin/mvn clean package"
}
    //sonarqube report
    stage ('sonarqube report'){
        sh "$maven/bin/mvn sonar:sonar"
    }
    
    //nexus upload
    stage ('nexus upload'){
        sh "$maven/bin/mvn deploy"
    }

     //deploy
    stage(' deploy to tomcat '){
        sshagent(['test']) {
         sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@3.94.9.95:/opt/apache-tomcat-11.0.3/webapps"
      
}
}
}//node closing
